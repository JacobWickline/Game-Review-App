<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoGame">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Red Dead Redemption II"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/rdr2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="15sp"
                android:text="Red Dead Redemption II is just a complete masterpiece. It has one of the greatest stories of all time, the voice acting is incredible, and the attention to detail in the smallest little things exactly mirror real-life. I could write a book just on how amazing this game is. If you have not played this game, I highly suggest you spend a lot of time appreciating this masterpiece."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Rate my Review"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rdr2_ratingbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="160sp"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:gravity="center"
                android:text="The Witcher III: Wild Hunt"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/thewitcher3" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="15sp"
                android:text="This game to me is simply incredible. Although there is a big learning curve to this game and sort of a skill gap, but the one thing I don't like about this game is the developers force you to stay within your level. For example if you are level 20 in the game, you can't go do a level 35 quest because you will get demolished by your enemies. But I find this video game to be simply amazing; it is a must play."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Rate my Review"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/witcher_ratingbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="160sp"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:gravity="center"
                android:text="Inscryption"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/inscryption" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="15sp"
                android:text="I am currently in the process of playing this video game, and so far I am in love with it. This video game is entirely unique and requires some problem solving skills. This video game is a card game that is completely interactive, to progress in the game it does require the player to think outside of the box; and when you figure out the problems, it is so satisfying, I highly recomend this game."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Rate my Review"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/inscryption_ratingbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="160sp"
                android:layout_marginBottom="75sp"
                android:numStars="5"
                android:stepSize="1" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="280sp"
                android:layout_marginBottom="25sp"
                android:onClick="openMainActivity"
                android:text="Back" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>